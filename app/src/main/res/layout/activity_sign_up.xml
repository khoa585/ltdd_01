<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorbg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Sign_in.sign_up">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:gravity="center_vertical"
            android:elevation="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_signin"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_height="wrap_content">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Đăng Kí"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/form_main"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_form"
        android:elevation="30dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            android:layout_height="wrap_content"
            android:hint="Nhập Email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHighlight="#e63946"
                android:textColorLink="#e63946" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:endIconMode="password_toggle"
            android:hint="Nhập mật khẩu">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHighlight="#727272"
                android:textColorLink="#FFFFFF" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="10dp"
            app:endIconMode="password_toggle"
            android:hint="Nhập lại mật khẩu">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHighlight="#727272"
                android:textColorLink="#FFFFFF" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quyên mật khẩu ?"
            android:paddingVertical="10dp"
            android:textColor="#918484"
            android:textSize="14sp"
            android:textStyle="bold" />
        <Button
            android:layout_marginVertical="5dp"
            android:id="@+id/bt_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_ui"
            android:text="Đăng Kí"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/layout_or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Hoặc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/facebook" />
            <ImageView
                android:id="@+id/twitter"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/instagram" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản?"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tv_signun_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="Đăng nhập ngay!"
                android:textColor="@color/colorbg"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>